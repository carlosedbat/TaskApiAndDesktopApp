<Application
    x:Class="DataSystem.FrontendWpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="DarkBlueBrush" Color="#081bee" />
            <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="WheatBrush" Color="#F5DEB3" />
            <SolidColorBrush x:Key="GreenBrush" Color="#47B728" />
            <SolidColorBrush x:Key="YellowBrush" Color="#FFFF00" />
            <SolidColorBrush x:Key="LightBlueBrush" Color="#2099E9" />
            <SolidColorBrush x:Key="RedBrush" Color="#f55e00" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
